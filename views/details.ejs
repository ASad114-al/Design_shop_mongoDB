<%- include('./partials/header')%>
<main class="detalis_product">
<button onclick="toggleHide()">Edit User</button>
 <a href="/single/<%=picture.id%>/delete">Delete</a>
   <figure>
   
        <img src=<%=picture.url%> alt="">
        </a>
    <figcaption>
        <p>
            <%=picture.articlename%>
        </p>
        <p>
            <%=picture.price%>
        </p>
        <p>
            <%=picture.company%>
        </p>
    </figcaption>

</figure>

<form action="/single/<%=picture.id%>/edit" method="POST" id="myForm" class="hide">
    <h2>Edit Product</h2>
    <input type="text" name="articlename"  placeholder="Product-Name" value="<%=picture.articlename%>">
    <input type="text" name="url"  placeholder="Url-Picture" value="<%=picture.url%>">
    <input type="text" name="brandname"  placeholder="Company" value="<%=picture.company%>">
    <input type="text" name="price"  placeholder="Price" value="<%=picture.price%>">
    <textarea name="description"  rows=6 placeholder="Write your article here..."><%=picture.description%></textarea>
    <input type="submit" value="Edit Product">
    </form>
</main>
